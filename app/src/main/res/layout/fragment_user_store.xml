<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.ieeeguc.ieeeguc.fragments.user.UserStore">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Create_User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ieeeMemberShipID"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="132dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="56dp"
            android:id="@+id/createUser" />

        <EditText
            android:hint="type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:id="@+id/type"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/createUser"
            android:layout_alignEnd="@+id/createUser"
            android:layout_marginRight="21dp"
            android:layout_marginEnd="21dp" />

        <EditText
            android:hint="lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastName"
            android:layout_below="@+id/firstName"
            android:layout_toLeftOf="@+id/firstName"
            android:layout_toStartOf="@+id/firstName"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp" />

        <EditText
            android:hint="birthDate(YYYY-MM-DD)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/birthdate"
            android:layout_below="@+id/lastName"
            android:layout_alignRight="@+id/firstName"
            android:layout_alignEnd="@+id/firstName"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <EditText
            android:hint="gender(Male-Female)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_below="@+id/birthdate"
            android:layout_alignRight="@+id/birthdate"
            android:layout_alignEnd="@+id/birthdate" />

        <EditText
            android:hint = "PhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNumber"
            android:layout_below="@+id/gender"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender" />

        <EditText
            android:hint = "IEEE_MemberShip_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ieeeMemberShipID"
            android:layout_below="@+id/phoneNumber"
            android:layout_alignLeft="@+id/phoneNumber"
            android:layout_alignStart="@+id/phoneNumber" />

        <EditText
            android:hint="firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstName"
            android:layout_below="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignStart="@+id/password" />

        <EditText
            android:hint="password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_below="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_alignEnd="@+id/email" />

        <EditText
            android:hint="email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_below="@+id/type"
            android:layout_alignRight="@+id/createUser"
            android:layout_alignEnd="@+id/createUser" />
    </RelativeLayout>

</FrameLayout>
